# ============================================
# Telegram Bot Configuration
# ============================================
# Get BOT_TOKEN from @BotFather on Telegram
# Steps: Open @BotFather -> /newbot -> Follow instructions -> Copy token
BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz-1234567890

# Channel ID (must be negative number for channels)
# To get Channel ID:
# 1. Add @userinfobot to your channel
# 2. Send /start in the channel
# 3. Or use: https://api.telegram.org/bot<BOT_TOKEN>/getUpdates
# Example: -1001234567890
CHANNEL_ID=-1001234567890

# ============================================
# Database Configuration
# ============================================
# Format: postgresql://username:password@host:port/database
# For Docker Compose (default):
DATABASE_URL=postgresql://postgres:postgres@db:5432/mared_bot

# For local development (if running without Docker):
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/mared_bot

# ============================================
# Crypto Payment Configuration
# ============================================
# Payment provider: "manual" (default), or add custom providers later
CRYPTO_PROVIDER=manual

# USDT Wallet Addresses for different networks
# TRC20 (Tron) network address - Example: TR7NHqjeKQxGTCi8q8ZY4pL8otSzgjLj6t
USDT_TRC20_ADDRESS=TR7NHqjeKQxGTCi8q8ZY4pL8otSzgjLj6t

# BSC (Binance Smart Chain) network address - Example: 0x55d398326f99059fF775485246999027B3197955
USDT_BSC_ADDRESS=0x55d398326f99059fF775485246999027B3197955

# Legacy: Old wallet address (deprecated, use network-specific addresses above)
CRYPTO_WALLET_ADDRESS=

# ============================================
# Bot Configuration
# ============================================
# Admin user IDs (comma-separated, no spaces)
# To get your user ID: Send /start to @userinfobot
# Example: 123456789,987654321
ADMIN_USER_IDS=123456789

# Free trial duration in days (default: 7)
FREE_TRIAL_DAYS=7

# Channel Configuration
# Use invite links to add users (better for private channels)
# Set to false to use unban method instead
USE_INVITE_LINKS=true

# ============================================
# Subscription Plans Configuration
# ============================================
# Plans are initialized in database via scripts/init_plans.py
# Available plans:
# - 1 Month: 30 days, 30 USDT
# - 3 Months: 90 days, 80 USDT
# - 6 Months: 180 days, 150 USDT
# - 12 Months: 365 days, 280 USDT
# To modify plans, edit scripts/init_plans.py and run it again

# ============================================
# Logging Configuration
# ============================================
# Log levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================
# Optional: Advanced Settings
# ============================================
# Uncomment and configure if needed:

# Webhook URL (for production, if using webhooks instead of polling)
# WEBHOOK_URL=https://yourdomain.com/webhook

# Webhook secret (for webhook security)
# WEBHOOK_SECRET=your_secret_here

# Redis URL (if you want to add caching later)
# REDIS_URL=redis://localhost:6379/0

# Timezone (default: UTC)
# TIMEZONE=UTC

